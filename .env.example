# Root domain for host-based tenant resolution in production
NEXT_PUBLIC_ROOT_DOMAIN=example.com

# Supabase project configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Demo actor identity for server-rendered pages and API fallback
DEMO_USER_EMAIL=owner@acme.example

# Shared secret expected in x-1global-signature header for webhook verification
ONEGLOBAL_WEBHOOK_SECRET=replace-with-strong-secret
